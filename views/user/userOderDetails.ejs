        <section class="cart_area">
            <div class="container">
                <div class="cart_inner">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Order Details</h2>
                            <!-- <p>Fetch the details of the current orders here.</p> -->
                        </div>
                    </div>

                    <!-- card-header end// --><br>

                    <h5>ORDER # : <span style="color: black;" id="orderID">
                            <%= data.orderID %>
                        </span></h5><br>
                    <h6>DATE OF ORDER : <span style="color: black;">
                            <%= data.date.toLocaleString() %>
                        </span></h6><br>
                    <p>SHIPPING ADDRESS: <span style="color: black;">
                            <%= data.address.SaveAs %>
                        </span>
                        <br>
                        <span style="color: black;">
                            <%= data.address.Housename %> , <%= data.address.Streetname %> ,
                        </span>
                        <span style="color: black;">
                            <%= data.address.City %> , <%= data.address.State %> ,
                        </span>
                        <span style="color: black;">
                            <%= data.address.Country %> - <%= data.address.Pincode %>
                        </span>
                        <br>
                        <span style="color: black;">Number : <%= data.address.Number %> </span>
                        <br>
                        <span style="color: black;">PaymentMethod: <%= data.paymentMethod %></span>

                    </p>

                    <div class="card">
                        <div class="card-body">
                            <div class="row">

                                <div class="container mt-6">
                                    <div class="row">
                                        <table class="table table-hover" width="50">
                                            <tr>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Product Image</th>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Product Name</th>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Quantity</th>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Price</th>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Total Price</th>
                                                <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Status</th>
                                                <!-- <th
                                                    style="color:rgb(154, 87, 144);font-size:medium; text-align: center; ">
                                                    Cancel</th> -->

                                            </tr>

                                            <% for( let i=0; i < data.products.length; i++ ) { %>

                                                <tr>
                                                    <td style="text-align: center;"><img
                                                            src="<%= data.products[i].Image  %>" height="80px"
                                                            width="80px"></td>
                                                    <td style="text-align: center;">
                                                        <%= data.products[i].product %>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <%= data.products[i].Quantity %>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <%= data.products[i].Price %>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        
                                                        <%= data.products[i].Quantity * data.products[i].Price %>
                                                    </td>

                                                    <td style="text-align: center;">
                                                        <% if(data.status === "Payment Pending") { %>
                                                            <p style="color: rgb(7, 7, 7);">
                                                                <%= data.status %>
                                                            </p>
                                                        <% } else  { %>
                                                            <%if (data.products[i].userId === "Cancelled" ) { %>
                                                                <p style="color: red;">
                                                                    <%= data.products[i].userId %>
                                                                </p>
                                                            <% } else { %>
                                                                <%= data.products[i].userId %>
                                                                <br>
                                                                <br>
                                                                <% if (data.products[i].userId !== "Delivered" && data.products[i].userId !== "Returned") { %>
                                                                    <button class="btn btn-danger"
                                                                        onclick="cancelOrder('<%= data.products[i].proId %>', '<%= data.orderID %>')">Cancel</button>
                                                                <% } %>
                                                            <% } %>
                                                            <br>
                                                            <% if (data.products[i].userId === "Delivered" ) { %>
                                                                <button class="btn btn-danger"
                                                                    onclick="returnOrder('<%= data.products[i].proId %>', '<%= data.orderID %>')">Return Order</button>
                                                            <% } %>
                                                        <% } %>
                                                    </td>


                                                </tr>



                                                <!-- <td style="text-align: center;">
                                                <%#= data.status  %>
                                            </td> -->



                                                </tr>

                                                <% } %>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
