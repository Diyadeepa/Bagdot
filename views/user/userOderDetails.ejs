        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            function cancelOrder(id, orderID) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to cancel the order",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Cancel it!"
                }).then((result) => {
                    if (result.isConfirmed) {

                        window.location.href = `/cancelOrder?id=${id}&&orderId=${orderID}`
                    }
                });
            }
            function returnOrder(id, orderID) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to return the order",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Return it!"
                }).then((result) => {
                    if (result.isConfirmed) {

                        window.location.href = `/returnOder?id=${id}&&orderId=${orderID}`
                    }
                });
            }
        </script>