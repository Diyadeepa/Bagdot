}

.order-details, .address-details {
    margin: 20px 0;
}

.order-id, .address-title, .date, .products-quantity, .address, .payment-method {
    color: #333;
    font-size: 1.1em;
}

.order-id span, .date span, .products-quantity span, .payment-method {
    color: #28a745;
    font-weight: bold;
}

.address {
    text-align: left;
    display: inline-block;
    margin-top: 10px;
}

.thank-you-message {
    font-size: 1.2em;
    color: #555;
    margin: 30px 0;
}

.continue-shopping-btn {
    padding: 10px 20px;
    font-size: 1.2em;
    border-radius: 5px;
    transition: background 0.3s ease;
}

.continue-shopping-btn:hover {
    background: #218838;
}

