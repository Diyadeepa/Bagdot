	<script>
		const name = document.getElementById('name');
		const number = document.getElementById('number');
		const nameError = document.getElementById('nameError');
		const numberError = document.getElementById('numberError');
	
		function validationForm() {
			var errors = '';
	
			if (!/^[a-zA-Z\s]+$/.test(name.value)) {
				nameError.innerHTML = 'Full name can only contain letters and spaces.';
				errors += 'Full name can only contain letters and spaces.\n';
			} else {
				nameError.innerHTML = ''; // Clear error message if valid
			}

			// if(name.length<=3){
			// 	console.log('name 333333')
			// 	nameError.innerHTML = 'Full name should have minimum 3 characters.';
			// 	errors += 'Full name should have minimum 3 characters.\n';
			// }else{
			// 	nameError.innerHTML = ''; // Clear error message if valid	
			// }
	
			if (number.value.trim() === '') {
				numberError.innerHTML = 'Mobile number is required.';
				errors += 'Mobile number is required.\n';
			} else if (!/^\d{10}$/.test(number.value)) {
				numberError.innerHTML = 'Invalid mobile number.';
				errors += 'Invalid mobile number.\n';
			} else {
				numberError.innerHTML = ''; // Clear error message if valid
			}
	
			if (errors) {
				return false;
			} else {
				return true;
			}
		}
	
		document.getElementById('saveChangesButton').addEventListener('click', function(event) {
			if (!validationForm()) {
				event.preventDefault();
			}
		});
	</script>



