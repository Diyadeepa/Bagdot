    <script>
        function retryPayment(orderId) {
            $.ajax({
                url: "/retryOrder/" + orderId,
                method: 'post',
                dataType: 'json',
                success: function (res) {
                    if (res.success) {
                        var options = {
                            "key": "rzp_test_6vFaPvEJqnLl2H",
                            "amount": res.amount,
                            "currency": "INR",
                            "name": "BagDot",
                            "description": res.description,
                            "order_id": res.order_id,
                            "handler": function (response) {
                                $.ajax({
                                    url: '/retryPlaceOrder',
                                    data: {
                                        orderId: orderId,
                                        payment_id: response.razorpay_payment_id,
                                        order_id: response.razorpay_order_id,
                                        signature: response.razorpay_signature
                                    },
                                    method: 'post',
                                    success: function (orderResponse) {
                                        if (orderResponse.success) {
                                            window.location.href = `/orderPlacedSuccessful?id=${orderResponse.id}`;
                                        } else {
                                            alert("Payment failed. Reason: " + (orderResponse.message || "Unknown error"));
                                        }
                                    },
                                    error: function (xhr, status, error) {
                                        console.error("Error in retryPlaceOrder:", xhr.responseText);
                                        alert("Payment processing failed. Please try again later.");
                                    }
                                });
                            },
                            "prefill": {
                                "name": res.name,
                                "email": res.email,
                                "contact": res.contact
                            },
                            "theme": {
                                "color": "#2300a3"
                            }
                        };
                        var rzp1 = new Razorpay(options);
                        rzp1.on('payment.failed', function (response) {
                            console.error("Payment failed:", response.error);
                            alert("Payment failed. Error: " + response.error.description);
                            window.location.href ='/orderHistory'
                        });
                        rzp1.open();
                    } else {
                        alert("Failed to initiate payment. Reason: " + (res.msg || "Unknown error"));
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error in retryOrder:", xhr.responseText);
                    alert("Failed to initiate payment. Please try again later.");
                }
            });
        }
    </script>

